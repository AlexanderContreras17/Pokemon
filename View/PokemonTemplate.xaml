<UserControl x:Class="Pokemon.View.PokemonTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pokemon.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Image Source="{Binding Foto}" Height="150"/>
        <TextBlock Text="{Binding Nombre}" VerticalAlignment="Center" FontSize="25" FontWeight="Bold"/>
    </StackPanel>
</UserControl>
